<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/linearLayout"
    android:background="@color/background_green"
    tools:context=".Signup">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/signup"
            style="@style/loginFont"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="45sp"
            android:text="@string/sign_up" />

        <ImageView
            android:id="@+id/smallCircle1"
            android:layout_width="58dp"
            android:layout_height="57dp"
            app:srcCompat="@drawable/circles"
            android:layout_marginStart="65sp"
            android:layout_marginTop="50sp"/>

        <ImageView
            android:id="@+id/bigCircle1"
            android:layout_width="108dp"
            android:layout_height="114dp"
            app:srcCompat="@drawable/circles"
            android:layout_marginStart="15sp"
            android:layout_marginTop="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="277dp"
        android:layout_marginTop="-10sp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="348dp"
            android:layout_height="161dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextTextEmailAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/editTextTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/button"
                android:layout_width="147dp"
                android:layout_height="43dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corners"
                android:text="@string/sign_up" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/bigCircle2"
            android:layout_width="108dp"
            android:layout_height="114dp"
            app:srcCompat="@drawable/circles"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="-60dp"/>

        <ImageView
            android:id="@+id/smallCircle2"
            android:layout_width="58dp"
            android:layout_height="57dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/circles" />

        <TextView
            android:id="@+id/loginBottomRight"
            style="@style/loginFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_in"
            android:layout_marginTop="25sp"
            android:layout_marginStart="80dp"/>
    </LinearLayout>


</LinearLayout>